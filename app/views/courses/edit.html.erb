<%= render 'shared/side_nav' %>
<%= render 'shared/navbar' %>

<div class="d-flex justify-content-center my-4">
  <h1>Edit Course</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="card w-25">
    <div class="card-body">
      <%= form_for(@course, url: course_path(@course), method: :patch) do |f| %>
        <div class="mb-3">
          <%= f.label :rename_course, class: "form-label" %><br />
          <%= f.text_field :course_name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.submit "Create Course", class: "btn btn-success mt-4 w-100 rounded-pill"%>
        </div>
      <% end %>
    </div>
  </div>
</div>