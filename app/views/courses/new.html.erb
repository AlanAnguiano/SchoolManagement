<%= render 'shared/side_nav' %>
<%= render 'shared/navbar' %>

<div class="d-flex justify-content-center my-4">
  <h1>New Course</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="w-25 d-flex justify-content-start my-2">
    <div>
      <%= link_to 'Back to Courses', courses_path, class: "btn btn-info" %>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center mt-2">
  <div class="card w-25">
    <div class="card-body">
      <%= form_for(@course, url: courses_path(@course)) do |f| %>
        <div class="mb-3">
          <%= f.label :course_name, class: "form-label" %><br />
          <%= f.text_field :course_name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.submit "Create Course", class: "btn btn-success mt-4 w-100 rounded-pill"%>
        </div>
      <% end %>
    </div>
  </div>
</div>