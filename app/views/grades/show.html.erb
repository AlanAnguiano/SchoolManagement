<%= render 'shared/navbar' %>

<div class="d-flex justify-content-center my-4">
  <h1><%= @student.name %>'s <%= @course.course_name %> Grades</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="w-50 d-flex justify-content-start my-2">
    <div>
      <%= link_to 'Back', student_courses_path(@student.id), class: "btn btn-info" %>
    </div>
  </div>
</div>

<div class="table-responsive d-flex justify-content-center">
  <table class="table table-striped mt-2 w-50">
    <thead class="table-head">
      <tr>
        <th scope="col">Course</th>
        <th scope="col">Quarter 1</th>
        <th scope="col">Quarter 2</th>
        <th scope="col">Quarter 3</th>
        <th scope="col">Quarter 4</th>
        <th scope="col">Total</th>
        <th scope="col">Passed</th>
        <th scope="col" class="text-center">Options</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @course.course_name %></td>
        <td><%= @grade.quarter_one %></td>
        <td><%= @grade.quarter_two %></td>
        <td><%= @grade.quarter_three %></td>
        <td><%= @grade.quarter_four %></td>
        <td><%= @grade.total %></td>
        <td><%= @grade.passed ? '<i class="bi bi-check-lg"></i>'.html_safe : '<i class="bi bi-x-lg"></i>'.html_safe %></td>
        <td class="text-center">
          <%= link_to edit_grade_path(@grade.id), class: 'btn btn-info' do %>
            <i class="bi bi-pencil"></i>
          <% end %> 
        </td>
      </tr>
    </tbody>
  </table>
</div>

<%= render 'shared/side_nav' %>