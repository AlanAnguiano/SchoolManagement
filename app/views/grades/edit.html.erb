<%= render 'shared/navbar' %>

<div class="d-flex justify-content-center my-4">
  <h1>Editing <%= @student.name %>'s <%= @course.course_name %> Grades</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="w-25 d-flex justify-content-start my-2">
    <div>
      <%= link_to 'Back', grade_path(@grade.id), class: "btn btn-info" %>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <div class="card w-25">
    <div class="card-body">
      <div class="mb-3">
          <label for="course_name" class="form-label">Course Name</label>
          <input type="text" id="course_name" disabled class="form-control" placeholder="<%= @course.course_name%>">
      </div>
      <%= form_for(@grade, url: grade_path(@grade), method: :patch) do |f| %>
        <div class="mb-3">
          <%= f.label :quarter_one, class: "form-label" %><br />
          <%= f.number_field :quarter_one, step: :any, placeholder: '0 - 10', min: 0, max: 10, autofocus: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :quarter_two, class: "form-label" %><br />
          <%= f.number_field :quarter_two, step: :any, placeholder: '0 - 10', min: 0, max: 10, autofocus: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :quarter_three, class: "form-label" %><br />
          <%= f.number_field :quarter_three, step: :any, placeholder: '0 - 10', min: 0, max: 10, autofocus: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :quarter_four, class: "form-label" %><br />
          <%= f.number_field :quarter_four, step: :any, placeholder: '0 - 10', min: 0, max: 10, autofocus: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.submit "Update Grade", class: "btn btn-success mt-4 w-100 rounded-pill"%>
        </div>
      <% end %>
      <div class="mb-3">
        <%= link_to 'Cancel', grade_path(@grade.id), class: 'btn btn-outline-secondary w-100 rounded-pill' %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/side_nav' %>