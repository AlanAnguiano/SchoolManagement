<div class="vh-100 sign-in-form__container d-flex justify-content-center align-items-center">
  <div class="card w-25">
    <div class="card-body">
      <div class="card-title text-center fs-3"><span>Sign In</span></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.submit "Log in", class: "sign-in__button w-100 rounded-pill"%>
        </div>
      <% end %>
    </div>
  </div>
</div>