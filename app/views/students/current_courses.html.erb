<%= render 'shared/side_nav' %>
<%= render 'shared/navbar' %>

<div class="d-flex justify-content-center my-4">
  <h1>Assigning course to <%= @student.name %></h1>
</div>

<div class="d-flex justify-content-center">
  <div class="w-25 d-flex justify-content-start my-2">
    <div>
      <%= link_to 'Back', student_courses_path(@student.id), class: "btn btn-info" %>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <div class="card w-25">
    <div class="card-body">
      <%= form_for(@student, url: student_courses_assign_path(@student), method: :post) do |f| %>
        <div class="mb-3">
          <%= f.label :courses_availables, class: "form-label" %><br />
          <%= select(:course, :course_id, Course.all.collect { |p| [ p.course_name, p.id ] }, { include_blank: "None" }, class: 'form-select') %>
        </div>

        <div class="mb-3">
          <%= f.submit "Assign Course", class: "btn btn-success mt-4 w-100 rounded-pill"%>
        </div>
      <% end %>
    </div>
  </div>
</div>