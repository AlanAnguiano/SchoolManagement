<%= render 'shared/side_nav' %>
<%= render 'shared/navbar' %>

<div class="d-flex justify-content-center my-4">
  <h1>All students</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="w-75 d-flex justify-content-end my-2">
    <div>
      <%= link_to 'Add Student', new_student_path, class: "btn btn-success" %>
    </div>
  </div>
</div>

<div class="table-responsive d-flex justify-content-center">
  <table class="table table-striped mt-2 w-75">
    <thead class="table-head">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Courses</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
      <% if @students.empty? %>
        <tr>
          <th scope="row" class="text-center" colspan="6">There are no students yet.</th>
        </tr>
      <% else %>
        <% @students.each_with_index do |student, i| %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td><%= link_to 'See Courses', student_courses_path(student.id) %></td>
            <td>
              <%= link_to edit_student_path(student.id), class: 'btn btn-info' do %>
                <i class="bi bi-pencil"></i>
              <% end %>

              <%= link_to student_path(student.id), class: 'btn btn-danger', data: { turbo_method: :delete } do %>
                <i class="bi bi-trash"></i>
              <% end %> 
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>